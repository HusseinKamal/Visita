<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray_font"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/red_lite"/>
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="@color/red_lite"/>
        </shape>
    </item>

</selector>