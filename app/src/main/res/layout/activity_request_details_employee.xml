<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyContainerDetails"
        android:orientation="vertical">
        <include layout="@layout/header_layout2"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:header="@{1}"
            android:id="@+id/lyHeaderContainer"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/svContainer">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:padding="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:background="@drawable/ripple_bg_style3"
                    android:id="@+id/cardRequest">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lyContainerRequest"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lyRequest"
                            android:gravity="center"
                            android:weightSum="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <com.emergency.app.views.CustomTextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvRequest"
                                        android:textSize="18sp"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/colorPrimary"
                                        android:gravity="start|center"/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_weight=".2"
                                android:id="@+id/lyStatus"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <com.emergency.app.views.CustomTextView
                                    android:id="@+id/tvStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="10sp" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lyRequestDetails"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/ivDesc"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_det"/>
                                <com.emergency.app.views.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvDescRequest"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/gray_font"
                                    android:gravity="start|center"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/ivTime"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_calendar"/>
                                <com.emergency.app.views.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvRequestDateTime"
                                    android:textSize="12sp"
                                    android:layout_gravity="start|center"
                                    android:textColor="@color/gray_font"
                                    android:gravity="start|center"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:padding="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:background="@drawable/ripple_bg_style3"
                    android:id="@+id/cardEmployee">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lyContainer"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lyUser"
                            android:gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profileImage"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginEnd="3dp"
                                    app:civ_border_color="@color/gray_font"
                                    app:civ_border_width="1dp"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <com.emergency.app.views.CustomTextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvUser"
                                        android:textSize="14sp"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/colorPrimary"
                                        android:gravity="start|center"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lyDetails"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/lyPrice"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="start|center"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/ivPrice"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:tint="@color/colorPrimary"
                                    app:srcCompat="@drawable/ic_money_bag"/>
                                <com.emergency.app.views.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvPrice"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/gray_font"
                                    android:gravity="start|center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/ivPhone"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_smartphone_call"/>
                                <com.emergency.app.views.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvPhone"
                                    android:textSize="16sp"
                                    android:clickable="true"
                                    android:background="?selectableItemBackground"
                                    android:layout_gravity="start|center"
                                    android:textColor="@color/gray_font"
                                    android:gravity="start|center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/ivLocation"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_pin"/>
                                <com.emergency.app.views.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvLocation"
                                    android:textSize="16sp"
                                    android:layout_gravity="start|center"
                                    android:textColor="@color/gray_font"
                                    android:gravity="start|center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/ivGender"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_gender"/>
                                <com.emergency.app.views.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvGender"
                                    android:textSize="16sp"
                                    android:layout_gravity="start|center"
                                    android:textColor="@color/gray_font"
                                    android:gravity="start|center"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:padding="10dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:background="@drawable/ripple_bg_style3"
                    android:id="@+id/cardReport">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lyContainerReport"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <com.emergency.app.views.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvReportTitle"
                            android:textSize="18sp"
                            android:text="@string/report"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="start|center"
                            android:textColor="@color/colorPrimary"
                            android:gravity="start|center"/>

                        <com.emergency.app.views.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvReport"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="start|center"
                            android:textColor="@color/gray_font"
                            android:gravity="start|center"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/lyAccept"
                    android:background="@drawable/ripple_bg_style3"
                    android:orientation="horizontal">
                    <com.emergency.app.views.CustomAppButton
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/btnAccept"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:textAllCaps="false"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ripple_bg_style"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <com.emergency.app.views.CustomAppButton
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/btnReject"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textAllCaps="false"
                        android:background="@drawable/ripple_style_bg2"
                        android:text="@string/reject"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <com.emergency.app.views.CustomAppButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnReport"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_bg_style"
                    android:text="@string/add_report"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>


